"<filename><replaceable>12</replaceable>-<replaceable>amd64</replaceable>-"
"<replaceable>GENERIC</replaceable>-<replaceable>snap</replaceable>.conf</"
"filename> -&gt; <filename>defaults-<replaceable>12</replaceable>.conf</"
